rules_version = '2';
service cloud.firestore {
  match /databases/unieventbd/documents { // Especificamos el nombre aquí también
    
    match /solicitudes/{document} {
      // Permitir precargar disponibilidad (lectura) y enviar formulario (creación)
      allow read, create: if true;
      // Solo el gestor autenticado puede editar o borrar (aprobar/rechazar)
      allow update, delete: if request.auth != null;
    }
    
    match /config/{document} {
      // Solo el gestor puede ver y editar la configuración de correos/tiempos
      allow read, write: if request.auth != null;
    }
  }
}